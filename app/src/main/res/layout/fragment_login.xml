<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/wallet"
            android:layout_marginTop="60dp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spendy"
            android:textSize="44sp"
            android:textColor="#2FA48F"
            android:fontFamily="@font/pacifico"
            android:layout_marginTop="10dp" />

        <!-- Username label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Tên đăng nhập"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <!-- Username input -->
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập số điện thoại hoặc username"
            android:paddingLeft="45dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:layout_marginTop="6dp"/>

        <!-- Password label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mật khẩu"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <!-- Password input -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="45dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableRight="@drawable/ic_eye_off"
            android:drawablePadding="10dp"
            android:layout_marginTop="6dp"/>

        <!-- Forgot password -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="#2FA48F"
            android:layout_gravity="end"
            android:layout_marginTop="5dp" />

        <!-- Login button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng nhập"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2FA48F"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Social login text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc đăng nhập bằng"
            android:layout_marginTop="20dp" />

        <!-- Social icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_google"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_facebook"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_apple"
                android:layout_margin="10dp" />
        </LinearLayout>

        <!-- Register -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nếu bạn chưa có tài khoản?"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tại đây"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="6dp"
            android:background="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"/>

    </LinearLayout>

</ScrollView>
