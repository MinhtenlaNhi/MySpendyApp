<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"/>

    <!-- App Name -->
    <ImageView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spendy"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"/>

    <!-- Username label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Tên đăng nhập"
        android:textColor="#2FA48F"
        android:textStyle="bold"/>

    <!-- Username input -->
    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập số điện thoại hoặc username"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_border"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"/>

    <!-- Password label -->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mật khẩu"
        android:textColor="#2FA48F"
        android:textStyle="bold" />

    <!-- Password input -->
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_border"
        android:drawableLeft="@drawable/ic_lock"
        android:drawableRight="@drawable/ic_eye_close"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"/>

    <!-- Forgot password -->
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textColor="#2FA48F"
        android:layout_gravity="end"
        android:layout_marginTop="5dp" />

    <!-- Login button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Đăng nhập"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2FA48F"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo2_medium"/>

    <!-- Social login text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng nhập bằng"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">
        <!-- Google -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_border"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_google"/>
        </FrameLayout>
        <!-- Facebook -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_border"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_facebook"/>
        </FrameLayout>
        <!-- Apple -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_border"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_apple"/>
        </FrameLayout>
    </LinearLayout>


    <!-- Register -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nếu bạn chưa có tài khoản?"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tại đây"
        android:textColor="#2FA48F"
        android:fontFamily="@font/baloo2_medium"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>