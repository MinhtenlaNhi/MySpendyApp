<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <!-- App Name -->
        <ImageView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/spendy" />

        <!-- Username label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tên đăng nhập"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <!-- Username input -->
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên đăng nhập"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
        <!-- PhoneNumber label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Số điện thoaị"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <!-- PhoneNumber input -->
        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập số điện thoại"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
        <!-- Email label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <!-- Email input -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập email "
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
        <!-- Password label -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mật khẩu"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <!-- Password input -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableRight="@drawable/ic_eye_close"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
        <!-- RePassword label -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nhập lại mật khẩu"
            android:textColor="#2FA48F"
            android:textStyle="bold" />

        <!-- Password input -->
        <EditText
            android:id="@+id/edtRePassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableRight="@drawable/ic_eye_close"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>

        <!-- Login button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2FA48F"
            android:fontFamily="@font/baloo2_medium"
            android:text="Đăng ký"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <!-- Login -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Đã có tài khoản?" />

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo2_medium"
            android:text="Đăng nhập"
            android:textColor="#2FA48F" />

    </LinearLayout>
</ScrollView>