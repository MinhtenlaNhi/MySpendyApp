<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentRegister"
    android:fillViewport="true">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
    
        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
    
        <!-- App Name -->
        <ImageView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spendy"
            android:layout_marginTop="-5dp"
            android:layout_gravity="center"/>
    
        <!-- Username label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tên đăng nhập"
            android:textColor="#2FA48F"
            android:textStyle="bold"/>
    
        <!-- Username input -->
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập username"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableStart="@drawable/ic_username"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
    
        <!-- Phone label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Số điện thoại"
            android:textColor="#2FA48F"
            android:textStyle="bold"/>
    
        <!-- Phone input -->
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập số điện thoại"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
    
        <!-- Email label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textColor="#2FA48F"
            android:textStyle="bold"/>
    
        <!-- Username input -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập email"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
    
        <!-- Password label -->
        <TextView
    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mật khẩu"
            android:textColor="#2FA48F"
            android:textStyle="bold" />
    
        <!-- Password input -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_eye_close"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
    
        <!-- Password confirm label -->
        <TextView
    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Xác nhận mật khẩu"
            android:textColor="#2FA48F"
            android:textStyle="bold" />
    
        <!-- Password confirm input -->
        <EditText
            android:id="@+id/edtPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext_border"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_eye_close"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>
    
        <!-- Register button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đăng ký"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2FA48F"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo2_medium"/>
    
        <!-- Login -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản?"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
    
        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="#2FA48F"
            android:fontFamily="@font/baloo2_medium"
            android:layout_gravity="center"/>
    
    </LinearLayout>
</ScrollView>