<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login"> <!-- Màn hình bắt đầu là Login -->

    <!-- ===================== FRAGMENTS KHÔNG CÓ MENU DƯỚI ===================== -->

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.myspendyapp.ui.FragmentLogin"
        android:label="Đăng nhập"
        tools:layout="@layout/fragment_login">
        <!-- Action để sang màn hình Home sau khi login thành công -->
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
        <!-- Action để sang màn hình Đăng ký -->
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/navigation_register" />
        <!-- Action để sang màn hình Quên mật khẩu -->
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />

    </fragment>

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.example.myspendyapp.ui.FragmentRegister"
        android:label="Đăng ký"
        tools:layout="@layout/fragment_register">
        <!-- Action để quay lại màn hình Login -->
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/navigation_login"
            app:popUpTo="@id/navigation_login"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.myspendyapp.ui.forgotpassword.FragmentForgotPassword"
        android:label="Forgot Password" />

    <!-- ===================== FRAGMENTS CÓ MENU DƯỚI ===================== -->

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myspendyapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myspendyapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_spending"
        android:name="com.example.myspendyapp.ui.FragmentSpending"
        android:label="@string/title_spending"
        tools:layout="@layout/fragment_spending" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.myspendyapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.myspendyapp.ui.FragmentAccount"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />

</navigation>
